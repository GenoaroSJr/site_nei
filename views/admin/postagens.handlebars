<h2>Lista de Postagens</h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success mb-3">Nova Postagem</button></a>

{{#each postagens}}
    <div class="card mt-2">
        <div class="card-body">
            <h4>Título: {{titulo}}</h4>
            <small>Descrição: {{descricao}}</small>
            <small>Data: {{data}}</small>
            <small>Categoria: {{categoria.nome}}</small><br>
            <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success mt-2">Editar</button></a>
            <a href="/admin/postagens/deletar/{{_id}}"><button class="btn btn-danger mt-2">Deletar</button></a>
        </div>
    </div>
{{else}}
    <p>Nenhuma postagem registrada</p>
{{/each}}
