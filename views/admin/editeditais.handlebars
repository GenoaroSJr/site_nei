    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<h3>Editar Edital: </h3>
<div class="card">
    <div class="card-body">
        <form class="card p-2" action="/admin/editais/edit" method="POST" enctype="multipart/form-data">
            <input type="file" name="file">
            <input type="text" id="titulo" name="titulo" placeholder="titulo do edital" class="form-control mt-1" value="{{editais.titulo}}">
            <input type="text" id="autor" name="autor" placeholder="Autor" class="form-control mt-1" value="{{editais.autor}}">
            <input type="text" id="dia" name="dia" placeholder="Data de publicação" class="form-control mt-1" value="{{editais.dia}}">
            <input type="text" id="descricao" name="descricao" placeholder="Ementa do curso" class="form-control mt-1" value="{{editais.descricao}}">
            <button type="submit" class="btn btn-success mt-1">Editar Edital</button>
        </form>
    </div>
</div>