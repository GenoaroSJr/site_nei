{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<h3>Novo Edital: </h3>
<div class="card">
    <div class="card-body">
        <form class="card p-2" action="/admin/editais/nova" method="POST" enctype="multipart/form-data">
            <input type="file" name="file">
            <input type="text" id="titulo" name="titulo" placeholder="Nome do Curso / Semana" class="form-control mt-1">
            <input type="text" id="autor" name="autor" placeholder="Autor" class="form-control mt-1">
            <input type="text" id="descricao" name="descricao" placeholder="Descrição" class="form-control mt-1">
            <input type="text" id="dia" name="dia" placeholder="Data de publicação" class="form-control mt-1">
            <button type="submit" class="btn btn-success mt-1">Publicar Edital</button>
        </form>
    </div>
</div>