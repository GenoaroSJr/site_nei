{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<h3>Nova Categoria: </h3>
<div class="card">
    <div class="card-body">
        <form class="card p-2" action="/admin/categorias/nova" method="POST" enctype="multipart/form-data">
            <input type="file" name="file">
            <input type="text" id="nome" name="nome" placeholder="Nome do Curso / Semana" class="form-control mt-1">
            <input type="text" id="slogam" name="slogam" placeholder="Chamada para o curso" class="form-control mt-1">
            <input type="text" id="autor" name="autor" placeholder="Palestrante / Professor" class="form-control mt-1">
            <input type="text" id="dia" name="dia" placeholder="Data do curso" class="form-control mt-1">
            <input type="text" id="slug" name="slug" placeholder="Slug da Categoria" class="form-control mt-1">
            <input type="text" id="texto" name="texto" placeholder="Ementa do curso" class="form-control mt-1">
            <button type="submit" class="btn btn-success mt-1">Criar Categoria</button>
        </form>
    </div>
</div>